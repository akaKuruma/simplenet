from gevent import monkey
monkey.patch_all()

import os
import sys
import grp
import pwd
import json
import time
import base64
import logging

import bottle
from bottle import delete, put, get, post, error, run, debug
from bottle import abort, request, ServerAdapter, response

from simplenet.common.config import config, get_logger
from simplenet.common.http_utils import reply_json, validate_input

from simplenet.routes import base, policy, errors

app = bottle.app()
logger = get_logger()

def start():
    os.setgid(grp.getgrnam('nogroup')[2])
    os.setuid(pwd.getpwnam(config.get("server", "user"))[2])
    debug(config.getboolean("server", "debug"))
    port = config.getint("server", "port")
    bind_addr = config.get("server", "bind_addr")
    logger.info("Starting SimpleNet Server")
    run(host=bind_addr, port=port, server="gevent")


def main(action="foreground"):
    from supay import Daemon
    daemon = Daemon(name="simplenet")

    if action ==  "start":
        daemon.start()
        start()
    elif action == "foreground":
        start()
    elif action == "stop":
        daemon.stop()
    elif action == "status":
        daemon.status()
    else:
        cli_help()


def cli_help():
    print "Usage: %s <start|stop|status|foreground>" % sys.argv[0]
    sys.exit(1)


def cli():
    if len(sys.argv) < 2:
        cli_help()
    main(action=sys.argv[1])


if __name__ == '__main__':
    cli()
